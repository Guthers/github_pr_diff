{
  "manifest_version": 3,
  "name": "GitHub PR Diff Extension",
  "version": "1.0.0",
  "description": "Adds diff icons next to commit hashes on GitHub pull request pages to quickly view diffs",
  "permissions": ["tabs"],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["build/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
